{
  "name": "minute-man",
  "version": "1.3.1",
  "description": "A handy mobile-first web app for zeroing your rifle and maybe some other stuff when I get around to it.",
  "author": {
    "name": "Jan Szpila"
  },
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@reach/router": "^1.3.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.29",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-intl": "4.5.3",
    "react-scripts": "3.4.0",
    "typescript": "^3.7.5"
  },
  "scripts": {
    "git-info": "git log -1 --pretty='const GitInfo = {sha: \"%h\",  date: \"%ci\"}%nexport default GitInfo;' > src/static/GitInfo.js",
    "start": "react-scripts start",
    "start:ssl": "HTTPS=true SSL_CRT_FILE=server.crt SSL_KEY_FILE=server.key npm start",
    "build": "npm run git-info && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/reach__router": "^1.3.4",
    "husky": "^4.2.3",
    "lint-staged": "10.5.3",
    "node-sass": "^4.13.1",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
