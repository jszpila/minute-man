{
  "name": "minute-man",
  "version": "1.3.1",
  "description": "A handy mobile-first web app for zeroing your rifle and maybe some other stuff when I get around to it.",
  "author": {
    "name": "Jan Szpila"
  },
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "13.5.0",
    "@types/jest": "27.5.2",
    "@types/node": "17.0.45",
    "@types/react": "18.0.18",
    "@types/react-dom": "18.0.6",
    "@types/react-intl": "3.0.0",
    "clsx": "1.2.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-intl": "6.1.0",
    "react-router": "6.3.0",
    "react-router-dom": "6.3.0",
    "react-scripts": "5.0.1",
    "typescript": "4.8.2",
    "web-vitals": "2.1.4",
    "workbox-background-sync": "6.5.4",
    "workbox-broadcast-update": "6.5.4",
    "workbox-cacheable-response": "6.5.4",
    "workbox-core": "6.5.4",
    "workbox-expiration": "6.5.4",
    "workbox-google-analytics": "6.5.4",
    "workbox-navigation-preload": "6.5.4",
    "workbox-precaching": "6.5.4",
    "workbox-range-requests": "6.5.4",
    "workbox-routing": "6.5.4",
    "workbox-strategies": "6.5.4",
    "workbox-streams": "6.5.4"
  },
  "scripts": {
    "i:cpp14": "CXXFLAGS=\"--std=c++14\" npm i",
    "ci:cpp14": "CXXFLAGS=\"--std=c++14\" npm ci",
    "git-info": "git log -1 --pretty='const GitInfo = {sha: \"%h\",  date: \"%ci\"}%nexport default GitInfo;' > src/static/GitInfo.js",
    "start": "react-scripts start",
    "start:ssl": "HTTPS=true SSL_CRT_FILE=server.crt SSL_KEY_FILE=server.key npm start",
    "start:legacy": "react-scripts --openssl-legacy-provider start",
    "build": "npm run git-info && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@formatjs/ts-transformer": "3.10.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "sass": "1.54.8"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
